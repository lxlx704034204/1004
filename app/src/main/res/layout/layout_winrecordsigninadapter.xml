<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:src="@mipmap/winrecord_noensure"
            android:id="@+id/iv_getprize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
             />

        <TextView
            android:layout_weight="5"
            android:id="@+id/tv_getprize"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="获得奖品" />

        <TextView
            android:layout_weight="4"
            android:id="@+id/tv_getprize_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2015-03-1112:12"
            />
    <Button
        android:id="@+id/btn_getprize_time"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@mipmap/personaldata_sendsms"
        android:text="确认收货"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="30dp" />
</LinearLayout>
