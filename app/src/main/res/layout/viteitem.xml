<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_cash_record"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"


        >

        <TextView
            android:id="@+id/tv_sq_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />


        <TextView
            android:id="@+id/winxin_num"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/tv_cash_money"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/tv_cash_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_comm_record"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:visibility="visible"

        >

        <TextView
            android:id="@+id/tv_comm_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />


        <TextView
            android:id="@+id/tv_friend_num"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />


        <TextView
            android:id="@+id/tv_comm_record"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/tv_get_money"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_vitefriend_record"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />


        <TextView
            android:id="@+id/tv_friend_time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"

            />


        <TextView
            android:id="@+id/tv_friend_cost"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:textSize="12sp"


            />

    </LinearLayout>



</LinearLayout>