<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/actionbar_bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/actiobar_line"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/iv_winrecodessingin_back"
            android:background="@color/actionbar_line" />

        <ImageView
            android:id="@+id/iv_winrecodessingin_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/actionbar_press"
            android:onClick="onClick"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/back" />

        <ImageView
            android:id="@+id/menuItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="一元夺宝"
            android:textColor="@color/actionbar_title"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<RelativeLayout
    android:id="@+id/rl_vite_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@mipmap/vite_img"
        />

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/rl_vite_img"
    android:layout_marginBottom="5dp"
    >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_vist_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FE8A27"
            android:text="0"
            android:singleLine="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E06E43"
            android:text="邀请好友"
            android:singleLine="true"

            />

    </LinearLayout>

<View
    android:layout_width="0.3dp"
    android:layout_height="25dp"
    android:background="#FEAF3D"
    android:layout_gravity="center"

    >



</View>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FE8A27"
            android:text="0.00"
            android:singleLine="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E06E43"
            android:text="佣金总计"
            android:singleLine="true"


            />

    </LinearLayout>



</LinearLayout>


</RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vite_friedn_log"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginTop="20dp"
        android:background="@drawable/base_selected"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_yuan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/vite_friend_img" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/img_yuan"
            android:layout_toRightOf="@+id/img_yuan"
            android:text="邀请好友明细" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/ic_more" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/comm_rebate_log"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/base_selected"
        android:clickable="true"
        android:layout_marginTop="2px"
        >

        <ImageView
            android:id="@+id/img_comm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/img_comm" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/img_comm"
            android:layout_toRightOf="@+id/img_comm"
            android:text="佣金返利明细" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/ic_more" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/comm_cash_log"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/base_selected"
        android:layout_marginTop="2px"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_cash"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/img_cash" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/img_cash"
            android:layout_toRightOf="@+id/img_cash"
            android:text="佣金提现明细" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/ic_more" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_now_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/btn_login"
        android:gravity="center"
        android:text="立即赚钱"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_apply_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/btn_cash"
        android:textColor="@color/white"
        android:text="申请提现"
        android:gravity="center"
        android:layout_margin="15dp"

        />



</LinearLayout>