<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/recharge_way_weixin" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_pay"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="2015-12-03 " />

    <TextView

        android:textSize="20dp"
        android:id="@+id/tv_money_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="20.0"
        android:textColor="@color/color_shen_red"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/tv_date"
        android:layout_alignBottom="@+id/tv_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:paddingTop="6dp"
        android:text="Y"
        android:textSize="20dp"
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_shen_red"
        android:layout_alignBottom="@+id/tv_money_rmb"
        android:layout_toLeftOf="@+id/tv_money_rmb"
        android:layout_toStartOf="@+id/tv_money_rmb" />
</RelativeLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:visibility="visible"
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="未支付"
        android:textColor="@color/color_shen_red" />
</LinearLayout>
