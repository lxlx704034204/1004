<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_qian"
    android:orientation="vertical"
    tools:context="com.hongbaogou.fragment.FindFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:background="@color/actionbar_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/find"
        android:textColor="@color/main_title"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/actiobar_line"
        android:background="@color/actionbar_line" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/find_laytou_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_white">

            <ImageView
                android:id="@+id/img_baskw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:minHeight="70dp"
                android:minWidth="95dp"
                android:padding="15dp"
                android:src="@mipmap/tu1" />

            <TextView
                android:id="@+id/tv_baskw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/img_baskw"
                android:layout_toRightOf="@+id/img_baskw"
                android:text="晒单分享" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_baskw"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/img_baskw"
                android:layout_toRightOf="@+id/img_baskw"
                android:text="没错，就是我中的！来咬我啊！"
                android:textColor="@color/color_gray"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_more" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/find_laytou_head_">

        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/find_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/layout_title"
        android:layout_weight="1"
        android:divider="@color/color_qian"
        android:dividerHeight="0.5dp" />

    <com.hongbaogou.view.NetErrorView
        android:id="@+id/netErrorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
