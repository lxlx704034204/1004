<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_gonumber"
            android:layout_toStartOf="@+id/tv_gonumber"
            android:ellipsize="end"
            android:lines="1"
            android:padding="5dp"
            android:text="shopname"
            android:textColor="@color/color_blue" />

        <TextView
            android:id="@+id/tv_shopqishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_gonumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="4人次"
            android:textColor="@color/color_red" />


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shopqishu"
            android:layout_marginTop="5dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_num"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/tv_num"
            android:layout_toRightOf="@+id/tv_num"
            android:padding="5dp" />

        <TextView
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/number1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/number1"
            android:layout_toRightOf="@+id/number1"
            android:padding="5dp" />

        <TextView
            android:id="@+id/number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/number2"
            android:layout_toEndOf="@+id/number2"
            android:layout_toRightOf="@+id/number2"
            android:padding="5dp" />

        <TextView
            android:id="@+id/number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/number1"
            android:layout_below="@+id/number1"
            android:padding="5dp" />

        <TextView
            android:id="@+id/number5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/number3"
            android:layout_toStartOf="@+id/number3"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/number3"
            android:layout_alignRight="@+id/number3"
            android:layout_below="@+id/number2"
            android:padding="5dp"
            android:text="查看全部"
            android:textColor="@color/color_blue" />

    </RelativeLayout>


</LinearLayout>
