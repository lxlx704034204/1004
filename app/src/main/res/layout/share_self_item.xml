<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="投了差不多两万"
                    android:textColor="@color/color_black"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/re_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/title"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="2015-11-26 22:12:41"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="传说中中中"
                        android:textColor="@color/color_share_blue"
                        android:textSize="12sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/goods_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_share"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/actionbar_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sd_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/re_share"
                        android:layout_alignStart="@+id/re_share"
                        android:layout_below="@+id/re_share"
                        android:layout_marginTop="5dp"
                        android:text="获奖商品：Apple iPhone6s 16G 颜色随机"
                        android:textColor="@color/color_black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/qishu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/sd_title"
                        android:layout_alignStart="@+id/sd_title"
                        android:layout_below="@+id/sd_title"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="参与期号:211210097"
                        android:textColor="@color/color_black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/totalpeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/qishu"
                        android:layout_alignStart="@+id/qishu"
                        android:layout_below="@+id/qishu"
                        android:layout_marginBottom="5dp"
                        android:text="本期参与：50人次"
                        android:textColor="@color/color_black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/lucknumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/totalpeople"
                        android:layout_alignStart="@+id/totalpeople"
                        android:layout_below="@+id/totalpeople"
                        android:layout_marginBottom="5dp"
                        android:text="幸运号码：8888888"
                        android:textColor="@color/color_black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/q_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/lucknumber"
                        android:layout_alignStart="@+id/lucknumber"
                        android:layout_below="@+id/lucknumber"
                        android:layout_marginBottom="5dp"
                        android:text="揭晓时间：2015-11-30 09:30"
                        android:textColor="@color/color_black"
                        android:textSize="11sp" />
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relativeLayout1"
                android:layout_alignStart="@+id/relativeLayout1"
                android:layout_below="@+id/relativeLayout1"
                android:padding="10dp"
                android:text="玩的时间不久，结果老是不中就狠下心来，使劲咋了两万，结果中了一个啦！感觉再继续中最好！"
                android:textColor="@color/color_black"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comments"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_blank" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_blank" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_blank" />

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_blank" />

                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_blank" />

                <ImageView
                    android:id="@+id/img_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_blank" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>